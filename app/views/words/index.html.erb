<%- model_class = Word -%>

<%= render 'layouts/title', title: 'Words' %>
<%= render 'words/header' %>

<%= form_tag({controller: :words, action: :search}, search_word: :text) do  %>
  <div class="col-md-1 text-right "><label for="text" class="text-default" >Text</label></div>
  <div class="col-md-3">
    <%= text_field_tag :text, '' ,:class => 'form-control form-sm'%>
  </div>
  <div class="col-md-1">
    <%= submit_tag 'search',:class => 'btn btn-facebook' %>
  </div>
<% end %>



<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:en) %></th>
      <th><%= model_class.human_attribute_name(:ja) %></th>
      <th><%= model_class.human_attribute_name(:count) %></th>
      <th><%= model_class.human_attribute_name(:hide) %></th>
      <th><%= model_class.human_attribute_name(:text_id) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
  <% @words.each do |word| %>
    <% unless word.hide %>
      <tr>
        <td><%= link_to word.id, word_path(word) %></td>
        <td><%= word.en %></td>
        <td><%= word.ja %></td>
        <td><%= word.count %></td>
        <td>
          <%= link_to 'hide', hide_word_path(word), method: :put ,:class => 'btn btn-warning' %>
        </td>
        <td>
        <% if word.text_id  %>
          <%#word.text_id%>
          <%# word.text.entext %>
        <%end%>
        </td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_word_path(word), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      word_path(word),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
    
  <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_word_path,
            :class => 'btn btn-primary' %>
