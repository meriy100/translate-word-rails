<%- model_class = Word -%>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name :id %></th>
      <th><%= model_class.human_attribute_name :en %></th>
      <th><%= model_class.human_attribute_name :ja %></th>
      <th><%= model_class.human_attribute_name :count %></th>
      <th><%= model_class.human_attribute_name :hide %></th>
      <th><%=t '.actions', default:  t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
  <% words.each do |word| %>
    <% unless word.hide %>
      <tr>
        <td><%= link_to word.id, word_path(word) %></td>
        <td><%= word.en %></td>
        <td><%= word.ja %></td>
        <td><%= word.count %></td>
        <td>
          <%= link_to 'hide', hide_word_path(word), method: :put ,class: 'btn btn-bootstrap' %>
        </td>
        <td>
          <%= link_to t('.edit', default:  t("helpers.links.edit")),
                      edit_word_path(word), class: 'btn btn-bootstrap btn-xs' %>
          <%= link_to t('.destroy', default: t("helpers.links.destroy")),
                      word_path(word),
                      method:  :delete,
                      data:  { confirm:  t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
                      class:  'btn btn-xs btn-default' %>
        </td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>


